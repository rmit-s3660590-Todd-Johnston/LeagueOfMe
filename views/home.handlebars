
<html>
  
  <head>
     <link rel="stylesheet" type="text/css" href="/css/home.css">
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawFavChart);
      google.charts.setOnLoadCallback(drawColumnChart);
      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawFavChart() {

        // Create the data table.
        var champName = "{{info.champName}}";
        var champPoints = {{info.champPoints}};
        var totalPoints = {{info.totalPoints}};
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Points Type');
        data.addColumn('number', 'Points');
        data.addRows([
          ['Total', totalPoints],
          [champName, champPoints]
        ]);

        // Set chart options
        var options = {'title':'Champion Mastery',
                       width: 250,
                       height: 250,
                       chartArea: {width: '94%', height: '80%'},
                       colors: ['#06b0ff', '#ff0a58'],
                       pieHole: 0.4,
                       backgroundColor: { fill:'transparent' },
                       titleTextStyle: {
                        color: '#ffdd06',    // any HTML string color ('red', '#cc00cc')
                        fontName: 'Calibri', // i.e. 'Times New Roman'
                        fontSize: 20, // 12, 18 whatever you want (don't specify px)
                                      },
                                       slices: {  1: {offset: 0.2},
                                                  12: {offset: 0.2},
                                    },
                        legend: 
                        {
                          textStyle:{color: 'ffdd06', fontSize: 16},
                           width: '100%',
                        },
                        };

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }



      function drawColumnChart() {
     
      var data = google.visualization.arrayToDataTable([
      
        ["Champion", "Points", { role: "style" } ],
        ["{{info.top10ChampNames.[0]}}", {{info.top10ChampPoints.[0]}}, "#06b0ff"],
        ["{{info.top10ChampNames.[1]}}", {{info.top10ChampPoints.[1]}}, "#ff0a58"],
        ["{{info.top10ChampNames.[2]}}", {{info.top10ChampPoints.[2]}}, "#06b0ff"],
        ["{{info.top10ChampNames.[3]}}", {{info.top10ChampPoints.[3]}}, "#ff0a58"],
        ["{{info.top10ChampNames.[4]}}", {{info.top10ChampPoints.[4]}}, "#06b0ff"],
        ["{{info.top10ChampNames.[5]}}", {{info.top10ChampPoints.[5]}}, "#ff0a58"],
        ["{{info.top10ChampNames.[6]}}", {{info.top10ChampPoints.[6]}}, "#06b0ff"],
        ["{{info.top10ChampNames.[7]}}", {{info.top10ChampPoints.[7]}}, "#ff0a58"],
        ["{{info.top10ChampNames.[8]}}", {{info.top10ChampPoints.[8]}}, "#06b0ff"],
        ["{{info.top10ChampNames.[9]}}", {{info.top10ChampPoints.[9]}}, "#ff0a58"],
      ]);

      var view = new google.visualization.DataView(data);
      view.setColumns([0, 1,
                       { calc: "stringify",
                         sourceColumn: 1,
                         type: "string",
                         role: "annotation" },
                       2]);

      var options = {
        chartArea: {
          width: '100%',
          height: '90%',
        },
        width: '100%',
        height: '100%',
        bar: {groupWidth: "65%"},
        vAxis: { textPosition: 'none', gridlines : {count : 0} },
        legend:"none",
        labels:'none',
        backgroundColor: { fill:'transparent' },
      };
      var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_div"));
      chart.draw(view, options);
  }
    </script>
  </head>
<!--Div for visuals-->
    <div id = "visuals_div">
        {{#if info.tierIcon}}
      <div id="icon_div"><img src="{{info.champIcon}}" width="200" height="200"></div>
      <div id="chart_div"></div>
      <div id="rank_div"><img src="{{info.tierIcon}}" width="200" height="200"></div>
    </div>
  <body>
    <div id="content">{{info.name}} has an id of {{info.id}} and is ranked: {{info.tier}} {{info.rank}}
    <br>
    and his favourite champion is {{info.champName}}
    </div>
