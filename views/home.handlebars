<html>
  <head>
     <link rel="stylesheet" type="text/css" href="/css/home.css">
    <!--Load the AJAX API-->
    
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      
      function drawChart() {

        // Create the data table.
        var champName = "{{info.champName}}";
        var champPoints = {{info.champPoints}};
        var totalPoints = {{info.totalPoints}};
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Points Type');
        data.addColumn('number', 'Points');
        data.addRows([
          ['Total', totalPoints],
          [champName, champPoints]
        ]);

        // Set chart options
        var options = {'title':'Champion Mastery',
                       'width':400,
                       'height':300,
                       colors: ['#ff73ff', '#2bd1ff'],
                       pieHole: 0.4,
                       backgroundColor: { fill:'transparent' },
                       titleTextStyle: {
                        color: '#ff8a1c',    // any HTML string color ('red', '#cc00cc')
                        fontName: 'Calibri', // i.e. 'Times New Roman'
                        fontSize: 18, // 12, 18 whatever you want (don't specify px)
                                      },
                        };

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
  </head>

  <body>
    <!--Div that will hold the pie chart-->
    <div id="chart_div"></div>
    <div id="content">{{info.name}} has an id of {{info.id}} and is ranked: {{info.tier}} {{info.rank}} <img src={{info.tierIcon}}>
    <img src={{info.champIcon}}><br>
  and his favourite champion is {{info.champName}}
</div>
  </body>
</html>

